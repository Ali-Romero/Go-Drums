      .finances-section__cards.font-s-24.text-center.color-grey-2.swiper-finances
        .finances-section__cards-list.swiper-wrapper
          .finances-section__cards-item.swiper-slide
            .finances-section__card
              .finances-section__card-title.font-s-42.color-red-2.font-m-bold 295 900 
                span.font-m-reg ₽
