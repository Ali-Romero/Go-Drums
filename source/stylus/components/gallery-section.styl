.gallery-section
  text-align: center
  &--3
    .gallery-section__images
      width 234px
      margin: 0 auto
      +above($breakpoints.sm)
        width unset
        margin: 0
    .gallery-section__images-list
      +above($breakpoints.sm)
        display: flex
        justify-content: center
        gap: 10px
      +above($breakpoints.md)
        gap: 20px
      img
        height: auto
        width 234px
        +above($breakpoints.md)
          width 308px
        +above($breakpoints.xxl)
          width 380px
    .gallery-section__images-item
      +above($breakpoints.sm)
        width auto !important
    .gallery-section__inner
      padding: 0 0 50px 0
      +above($breakpoints.sm)
        padding: 0 0 60px 0
      +above($breakpoints.md)
        padding: 0 0 80px 0
      +above($breakpoints.xxl)
        padding: 0 0 128px 0

  &__inner
    padding: 20px 0 50px 0
    +above($breakpoints.md)
      padding: 46px 0 66px 0
    +above($breakpoints.xxl)
      padding: 70px 0 95px 0

  &__title
    margin: 0 0 30px 0
    +above($breakpoints.xxl)
      margin: 0 0 46px 0

  &__images-container
    +above($breakpoints.sm)
      overflow: hidden

  &__images
    margin: 0 auto
    +above($breakpoints.sm)
      width 234px
    +above($breakpoints.md)
      width 308px
    +above($breakpoints.xxl)
      width 380px

  &__image
    img
      border-radius: 10px
      width 100%
      height: auto

  &__controls
    display: flex
    justify-content: center
    gap: 20px
    margin: 20px 0 0 0
    +above($breakpoints.xxl)
      margin: 30px 0 0 0
  
  &__controls-btn
    transform: scale(1)
    transition: 0.3s
    cursor pointer
    &:hover
      transform: scale(1.2)
    svg
      width 40px
      height: 40px
      +above($breakpoints.md)
        width 45px
        height: 45px
