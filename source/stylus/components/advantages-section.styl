.advantages-section
  &__inner
    padding: 50px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: left
      position: relative
      padding: 78px 0 60px 0
    +above($breakpoints.md)
      padding: 110px 0 80px 0
    +above($breakpoints.xxl)
      padding: 157px 0 109px 0

  &__title
    margin: 0 0 18px 0
    +above($breakpoints.md)
      margin: 0 0 24px 0
    +above($breakpoints.xxl)
      margin: 0 0 40px 0

  &__title-helper
    font-weight: 400
    margin: 0 0 20px 0
    +above($breakpoints.sm)
      margin: 0

  &__info
    padding: 22px 8px;
    box-shadow: 0 25px 31px 0 rgba(121, 58, 0, 0.07);
    background-color: $color-white
    border-radius: 10px
    +above($breakpoints.sm)
      position: absolute
      right: 0;
      top: 38px;
      width: 342px;
      height: 477px;
      padding: 22px 13px;
    +above($breakpoints.md)
      top: 75px;
      width: 410px;
      height: 560px;
      padding: 38px 40px;
    +above($breakpoints.xxl)
      top: 108px
      width 480px
      height: 728px
      padding: 60px 45px

  &__info-item
    border-bottom: 1px solid  #dbdbdb;
    padding: 0 0 10px 0
    margin: 0 0 10px 0
    +above($breakpoints.md)
      padding: 0 0 16px 0
      margin: 0 0 16px 0
    +above($breakpoints.xxl)
      padding: 0 0 30px 0
      margin: 0 0 30px 0
    &:last-child
      margin: 0
      padding: 0
      border: none

  &__info-title
    display: flex
    align-items: center
    justify-content: center
    font-weight: 600
    gap: 14px
    margin: 0 0 6px 0
    +above($breakpoints.sm)
      justify-content: flex-start
    +above($breakpoints.md)
      margin: 0 0 14px 0
    +above($breakpoints.xxl)
      gap: 20px
      margin: 0 0 20px 0

  &__info-description
    font-weight: 300
    +above($breakpoints.sm)
      padding: 0 0 0 14px
    +above($breakpoints.md)
      padding: 0 0 0 30px
    +above($breakpoints.xxl)
      padding: 0 0 0 40px

  &__image
    margin: 24px -125px
    +above($breakpoints.sm)
      margin: 24px 0
    +above($breakpoints.md)
      margin: 38px 0
    +above($breakpoints.xxl)
      margin: 50px 0
    img
      border-radius: 10px
      height: auto
      width 557px
      +above($breakpoints.md)
        width 700px
      +above($breakpoints.xxl)
        width 980px

  &__feedback
    .feedback
      &__form
        display: flex
        align-items: flex-end
        flex-direction: column
        gap: 14px
        +above($breakpoints.sm)
          gap: 30px
          flex-direction: row
        +above($breakpoints.md)
          gap: 66px
        +above($breakpoints.xxl)
          gap: 96px
      &__list
        +above($breakpoints.sm)
          width 336px
        +above($breakpoints.md)
          width 388px
        +above($breakpoints.xxl)
          width 454px
      &__item
        width 290px
        +above($breakpoints.sm)
          width 164px
        +above($breakpoints.md)
          width 189px
        +above($breakpoints.xxl)
          width 220px
        &:last-child
          width 290px
          +above($breakpoints.sm)
            width 100%
