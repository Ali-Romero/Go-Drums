.input
  display: flex
  align-items: center
  height: 100%
  width 100%
  position relative
  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1

  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    border-radius: 5px
    border: none
    background: $color-brown-2
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: $color-grey-1
    font-weight: bold
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  &__field
    width: 100%
    height: 50px
    line-height: 120%
    font-size: 14px
    padding: 0
    display: block
    outline: none
    color: #323232
    text-transform: uppercase
    border-radius: 100px
    border: 1px solid rgba(255, 255, 255, 0);
    background: rgba(255, 255, 255, 1);
    font-family: "Montserrat-Regular"
    font-weight: 400
    padding: 0 10px 0 18px
    transition: 0.3s
    +above($breakpoints.sm)
      height: 42px
      font-size: 13px
    +above($breakpoints.md)
      font-size: 14px
      height: 46px
    +above($breakpoints.xxl)
      height: 54px
      font-size: 16px
      padding: 0 10px 0 24px
    &:-webkit-autofill,
    &:-webkit-autofill:hover,
    &:-webkit-autofill:focus,
    &:-webkit-autofill:active
      -webkit-box-shadow: 0 0 0px 1000px white inset
      transition: all 5000s ease-in-out 0s
    &::placeholder
      font-family: "Montserrat-Regular"
      font-weight: 400
      color: rgba(50, 50, 50, 0.5)
    &::-ms-input-placeholder
      font-family: "Montserrat-Regular"
      font-weight: 400
      color: rgba(50, 50, 50, 0.5)
    &.error
      color: $color-error
      &::placeholder
        color: $color-error
      &:-ms-input-placeholder
        color: $color-error
      &::-ms-input-placeholder
        color: $color-error
      animation: shake 0.6s;
      @keyframes shake {
        10%, 90% {
          transform: translate3d(-1px, 0, 0)
        }
        
        20%, 80% {
          transform: translate3d(2px, 0, 0)
        }

        30%, 50%, 70% {
          transform: translate3d(-4px, 0, 0)
        }

        40%, 60% {
          transform: translate3d(4px, 0, 0)
        }
      }
    &:focus
      border: 1px solid #e31e24
    &--textarea
      resize: none
      padding-top: 15px
      +above($breakpoints.sm)
        padding-top: 13px
      +above($breakpoints.md)
        padding-top: 15px
      +above($breakpoints.xxl)
        padding-top: 17px
