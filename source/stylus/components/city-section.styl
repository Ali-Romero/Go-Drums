.city-section
  background-image: url('../images/city-bg.svg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover

  &__inner
    padding: 50px 0
    margin: 0 -10px
    +above($breakpoints.sm)
      margin: 0
      padding: 50px 0 40px 0
    +above($breakpoints.md)
      padding: 80px 0 50px 0
    +above($breakpoints.xxl)
      padding: 100px 0 85px 0

  &__title
    margin: 0 0 28px 0
    +above($breakpoints.md)
      margin: 0 0 38px 0
    +above($breakpoints.xxl)
      margin: 0 0 50px 0

  &__title-main
    margin: 0 0 10px 0
    +above($breakpoints.md)
      margin: 0 0 20px 0
    +above($breakpoints.xxl)
      margin: 0 0 30px 0

  &__feedback
    .feedback
      &__list
        justify-content: center
      &__item
        +above($breakpoints.sm)
          width: 175px
        +above($breakpoints.md)
          width: 220px
        +above($breakpoints.xxl)
          width: 251px
