.city-section
  background-image: url('../images/city-bg.jpg')
  background-repeat: no-repeat
  background-position: center top
  background-size: cover
  &__inner
    padding: 50px 0 0 0
    +above($breakpoints.sm)
      padding: 60px 0 0 0
    +above($breakpoints.md)
      padding: 80px 0 0 0
    +above($breakpoints.xxl)
      padding: 100px 0 0 0
  &__title
    margin: 0 0 24px 0
    +above($breakpoints.md)
      margin: 0 0 44px 0
    +above($breakpoints.xxl)
      margin: 0 0 64px 0
  &__image
    margin: 0 0 20px 0
    +above($breakpoints.md)
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      margin: 0 0 50px 0
    img
      height: auto
      margin: 0 auto
      border-radius: 10px
      width 100%
      +above($breakpoints.sm)
        width 450px
      +above($breakpoints.md)
        width 650px
      +above($breakpoints.xxl)
        width 980px

  &__feedback
    margin: 0 0 28px 0
    +above($breakpoints.sm)
      margin: 0 0 36px 0
    +above($breakpoints.md)
      margin: 0 0 44px 0
    +above($breakpoints.xxl)
      margin: 0 0 60px 0
    .feedback
      &__list
        justify-content: center