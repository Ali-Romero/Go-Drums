.steps-section
  color: $color-white

  &__inner
    padding: 50px 0
    +above($breakpoints.sm)
      padding: 60px 0
    +above($breakpoints.md)
      padding: 80px 0
    +above($breakpoints.xxl)
      padding: 100px 0

  &__title
    margin: 0 0 14px 0
    +above($breakpoints.md)
      margin: 0 0 20px 0
    +above($breakpoints.xxl)
      margin: 0 0 30px 0

  &__title-helper
    margin: 0 0 30px 0
    +above($breakpoints.md)
      margin: 0 0 40px 0
    +above($breakpoints.xxl)
      margin: 0 0 60px 0

  &__info
    margin: 0 0 50px 0
    font-weight: 300
    +above($breakpoints.md)
      margin: 0 0 70px 0
    +above($breakpoints.xxl)
      margin: 0 0 100px 0

  &__info-list
    display: flex
    flex-wrap: wrap
    justify-content: center
    gap: 16px 0
    +above($breakpoints.sm)
      gap: 28px 33px
    +above($breakpoints.md)
      gap: 32px 69px
    +above($breakpoints.xxl)
      gap: 43px 100px

  &__info-item
    &:nth-child(6),
    &:nth-child(8),
    &:nth-child(9)
      +above($breakpoints.sm)
        width 200px
      +above($breakpoints.md)
        width 252px
      +above($breakpoints.xxl)
        width 300px

  &__info-title
    margin: 0 0 2px 0
    +above($breakpoints.sm)
      margin: 0 0 6px 0
    +above($breakpoints.md)
      margin: 0 0 10px 0
    +above($breakpoints.xxl)
      margin: 0 0 18px 0

  &__feedback
    .feedback
      &__list
        justify-content: center
      &__item
        &:last-child
          width 290px
          +above($breakpoints.sm)
            width 277px
          +above($breakpoints.md)
            width 306px
          +above($breakpoints.xxl)
            width 340px
