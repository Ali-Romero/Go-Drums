.swiper-progress
  position relative !important
  height: 6px !important
  overflow: hidden
  background: $color-red-1
  margin: 14px 0 0 0
  border-radius: 10px !important
  +above($breakpoints.sm)
    display: none
  .swiper-pagination-progressbar-fill
    border-radius: 10px !important
    background: #D45006
